<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Company Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>About Company</h2>
    <form action="/admin/about_company" method="POST">
        <div class="mb-3">
            <label for="about_heading" class="form-label">Heading</label>
            <input type="text" class="form-control" id="about_heading" name="about_heading" required>
        </div>
        <div class="mb-3">
            <label for="about_details" class="form-label">Details</label>
            <textarea class="form-control" id="about_details" name="about_details" rows="4" required></textarea>
        </div>
        <div class="mb-3">
            <label for="about_point1" class="form-label">Point 1</label>
            <input type="text" class="form-control" id="about_point1" name="about_point1" required>
        </div>
        <div class="mb-3">
            <label for="about_point2" class="form-label">Point 2</label>
            <input type="text" class="form-control" id="about_point2" name="about_point2" required>
        </div>
        <div class="mb-3">
            <label for="about_point3" class="form-label">Point 3</label>
            <input type="text" class="form-control" id="about_point3" name="about_point3" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<!-- Bootstrap JS (Optional, for interactive components) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<table border="2" width="100%"  class="mt-5 table table-bordered">
    <tr>
        <th>action</th>
        <th>sr.no</th>
        <th>about_heading</th>
        <th>about_details</th>
        <th>about_point1</th>
        <th>about_point2</th>
        <th>about_point3</th>
    </tr>
    <% sr=1; for(i of data) {%>
        <tr>
            <td>
                <a href="/admin/about_company_delete/<%-i.about_id%>" onclick="return confirmDelete()">
                    <button class="text-danger">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </a>
                <a href="/admin/about_company_update/<%-i.about_id%>">
                    <button class="text-danger">
                    <i class="fa-solid fa-pencil"></i>
                    </button>
                </a>
            </td>
            <td><%-sr++%></td>
        <td><%-i.about_heading%></td>
        <td><%-i.about_details%></td>
        <td><%-i.about_point1%></td>
        <td><%-i.about_point2%></td>
        <td><%-i.about_point3%></td>
    </tr>
    <% } %>
</table>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>

