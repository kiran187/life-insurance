<%-include("navbar.ejs")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
    
</head>
<body>
    <div class="container mt-5">
        <h2>FAQ Form</h2>
        <form action="/admin/faq_question" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="faq_question">FAQ Question</label>
                <input type="text" class="form-control" id="faq_question" name="faq_question" placeholder="Enter FAQ Question" required>
            </div>
            <div class="form-group">
                <label for="faq_answer">FAQ Answer</label>
                <textarea class="form-control" id="faq_answer" name="faq_answer" rows="4" placeholder="Enter FAQ Answer" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Submit</button>
        </form>
    </div>

    
</body>
</html>

<table border="1" width="100%" class="table table-bordered mt-4">
    <tr>
        <th>action</th>
        <th>sr.no</th>
        <th>
            FAQ Question
        </th>
        <th>FAQ Answer</th>
    </tr>
    <% sr=1; for(i of data) {%> 
        <tr>
            <td><a href="/admin/faq_question_delete/<%-i.faq_id%>" onclick="return confirmDelete()" >
                <button class="text-danger">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </a>
            <a href="/admin/faq_question_update/<%-i.faq_id%>">
                <button class="text-warning">
                    <i class="fa-solid fa-pencil"></i>
                </button>
            </a></td>
            <td><%-sr++%></td>
            <td><%-i.faq_question%></td>
            <td><%-i.faq_answer%></td>
        </tr>
        
    <% } %>
</table>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>

