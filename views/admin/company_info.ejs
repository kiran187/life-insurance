
<%- include("navbar.ejs") %>
<div class="container mt-5">
    <h1>Company Information</h1>
    <form action="/admin/submit_company_info" method="POST">
        <div class="form-group">
            <input type="hidden" name="company_id" value="<%-old_data.company_id%>">
            <label for="company_name">Company Name</label>
            <input type="text" class="form-control" value="<%-old_data.company_name%>" id="company_name" name="company_name" required>
        </div>
        <div class="form-group">
            <label for="company_logo">Company Logo URL</label>
            <input type="file" class="form-control" id="company_logo"  name="company_logo" >
            <img src="uploads/<%-old_data.company_logo%>">
        </div>
        <div class="form-group">
            <label for="company_mobile">Company Mobile</label>
            <input type="text" class="form-control" id="company_mobile" value="<%-old_data.company_mobile%>" name="company_mobile" required>
        </div>
        <div class="form-group">
            <label for="company_email">Company Email</label>
            <input type="email" class="form-control" id="company_email" value="<%-old_data.company_email%>" name="company_email" required>
        </div>
        <div class="form-group">
            <label for="company_address">Company Address</label>
            <textarea class="form-control" id="company_address" name="company_address" rows="3" required><%-old_data.company_address%></textarea>
        </div>
        <div class="form-group">
            <label for="company_sub_details">Company Sub Details</label>
            <textarea class="form-control" id="company_sub_details" name="company_sub_details" rows="3" required><%-old_data.company_sub_details%></textarea>
        </div>
        <div class="form-group">
            <label for="company_fb_link">Facebook Link</label>
            <input type="url" class="form-control" value="<%-old_data.company_fb_link%>" id="company_fb_link" name="company_fb_link">
        </div>
        <div class="form-group">
            <label for="company_insta_link">Instagram Link</label>
            <input type="url" class="form-control" id="company_insta_link"  value="<%-old_data.company_insta_link%>" name="company_insta_link">
        </div>
        <div class="form-group">
            <label for="company_linkedin_link">LinkedIn Link</label>
            <input type="url" class="form-control" id="company_linkedin_link" value="<%-old_data.company_linkedin_link%>" name="company_linkedin_link">
        </div>
        <div class="form-group">
            <label for="company_twitter_link">Twitter Link</label>
            <input type="url" class="form-control" id="company_twitter_link" value="<%-old_data.company_twitter_link%>" name="company_twitter_link">
        </div>
        <div class="form-group">
            <label for="company_whatsapp_no">WhatsApp Number</label>
            <input type="text" class="form-control" id="company_whatsapp_no" value="<%-old_data.company_whatsapp_no%>" name="company_whatsapp_no">
        </div>
        <button type="submit" style="margin-top: 20px; margin-left: 50%;" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include("footer.ejs") %>