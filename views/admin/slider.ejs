
<%- include("navbar.ejs")%>
<header>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
</header>
<form action="/admin/add_slider" method="POST" enctype="multipart/form-data" class="p-4 border rounded bg-light">
<div class="container mt-5">
    <h2 class="pb-4">Add Slider</h2>
   
        <div class="mb-3">
            <label for="slider_heading" class="form-label">Slider Heading</label>
            <input type="text" class="form-control p-2" id="slider_heading" name="slider_heading" maxlength="255" required>
        </div>
        <div class="mb-3">
            <label for="slider_content" class="form-label">Slider Content</label>
            <textarea class="form-control p-2" id="slider_content" name="slider_content" rows="3" required></textarea>
        </div>
        <div class="mb-3">
            <label for="slider_image" class="form-label">Slider Image</label>
            <input class="form-control p-2" type="file" id="slider_image" name="slider_image" accept="image/*" required>
        </div>
        <div class="mb-3">
            <label for="button_text" class="form-label">Button Text</label>
            <input type="text" class="form-control p-2" id="button_text" name="button_text" maxlength="50" required>
        </div>
        <div class="mb-3">
            <label for="button_link" class="form-label">Button Link</label>
            <input type="url" class="form-control p-2" id="button_link" name="button_link" maxlength="255" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<table width="100%" border="1" class="table">
    <tr>
        <th>action</th>
        <th>sr.no</th>
        <th>Slider Heading</th>
        <th>Slider Content</th>
        <th>Slider Image</th>
        
        <th>Button Text</th>
        <th>Button Link</th>
    </tr>
<% sr=1; for(i of slider_data) {%> 
    <tr>
        <td><a href="/admin/delete/<%-i.slider_id%>" onclick="return confirmDelete()">
            <button class="text-danger">
                <i class="fa-solid fa-trash"></i>
            </button>
        </a> 
           <a href="/admin/update/<%-i.slider_id%>">
            <button class="text-warning">
                <i class="fa-solid fa-pencil"></i>
            </button>
           </a> </td>
        <td><%=sr++%></td>
        <td><%-i.slider_heading%></td>
        <td><%-i.slider_content%></td>
        <td><img src="/uploads/<%-i.slider_image%>" width="100px" height="100px"></td>
        <td><%-i.button_text%></td>
        <td><%-i.button_link%></td>
    </tr>
    <% } %>
</table>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>
<%- include("footer.ejs")%>